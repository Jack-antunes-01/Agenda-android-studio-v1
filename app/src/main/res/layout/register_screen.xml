<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/design_default_color_primary_dark"
    android:orientation="vertical"
    tools:context=".ui.TelaDeCadastro.RegisterFragment">

    <LinearLayout
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/backButtonCadastrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/base_normal"
            android:src="@drawable/abc_vector_test" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:text="Cadastrar-se" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/laranja"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="50dp"
            android:paddingVertical="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:text="Nome" />
            <EditText
                android:id="@+id/registerName"
                android:maxLength="50"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="10dp"
                android:paddingHorizontal="15dp"
                android:layout_gravity="center"
                android:background="@drawable/edittext_rounded_corners"
                android:textColorHint="@android:color/darker_gray"
                android:hint="Digite seu nome.." />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:text="E-mail" />
            <EditText
                android:id="@+id/registerEmail"
                android:maxLength="100"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="10dp"
                android:paddingHorizontal="15dp"
                android:layout_gravity="center"
                android:background="@drawable/edittext_rounded_corners"
                android:textColorHint="@android:color/darker_gray"
                android:hint="Digite seu email.." />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:text="RA" />
            <EditText
                android:id="@+id/registerRa"
                android:maxLength="7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="10dp"
                android:paddingHorizontal="15dp"
                android:layout_gravity="center"
                android:background="@drawable/edittext_rounded_corners"
                android:textColorHint="@android:color/darker_gray"
                android:hint="Digite seu RA.." />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:text="Telefone" />
            <EditText
                android:id="@+id/registerPhone"
                android:maxLength="11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="10dp"
                android:paddingHorizontal="15dp"
                android:layout_gravity="center"
                android:background="@drawable/edittext_rounded_corners"
                android:textColorHint="@android:color/darker_gray"
                android:hint="Digite seu telefone.." />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:text="Senha" />
            <EditText
                android:id="@+id/registerPassword"
                android:maxLength="30"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="10dp"
                android:paddingHorizontal="15dp"
                android:layout_gravity="center"
                android:background="@drawable/edittext_rounded_corners"
                android:textColorHint="@android:color/darker_gray"
                android:hint="******"
                android:inputType="textPassword"
                />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:text="Confirme a senha" />
            <EditText
                android:id="@+id/registerConfirmPassword"
                android:maxLength="30"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="10dp"
                android:paddingHorizontal="15dp"
                android:layout_gravity="center"

                android:background="@drawable/edittext_rounded_corners"
                android:textColorHint="@android:color/darker_gray"
                android:hint="******"
                android:inputType="textPassword"
                />

            <Button
                android:id="@+id/registerBtnRegister"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFB300"
                android:paddingVertical="12dp"
                android:textSize="16dp"
                android:layout_marginTop="20dp"
                android:text="Cadastrar"
                android:layout_gravity="center"
                app:cornerRadius="5dp" />


        </LinearLayout>
    </LinearLayout>
</LinearLayout>